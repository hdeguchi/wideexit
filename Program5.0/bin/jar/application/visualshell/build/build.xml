<?xml version="1.0" encoding="Shift_JIS"?>
<project name="visualshell" default="create" basedir=".">

	<!--init property-->
	<target name="init" >
		<property name="jar_filename" value="../visualshell.jar"/>
		<property name="manifest_filename" value="mc.mf"/>
		<property name="main_class" value="soars.application.visualshell.main.Application"/>
		<property name="runtime_jar_filename" value="../library/common/commons-codec-1.3.jar ../library/common/commons-httpclient-3.0.1.jar ../library/common/commons-logging-1.1.jar ../library/spring/spring.jar ../library/xalan/xalan.jar ../library/j2ssh/j2ssh-ant.jar ../library/j2ssh/j2ssh-common.jar ../library/j2ssh/j2ssh-core.jar ../library/j2ssh/j2ssh-daemon.jar  ../library/ganymed/ganymed-ssh2-build210.jar ../library/beanshell/bsh-2.0b4.jar ../library/xmlrpc/ws-commons-util-1.0.1.jar ../library/xmlrpc/xmlrpc-client-3.0.jar ../library/xmlrpc/xmlrpc-common-3.0.jar ../library/xmlrpc/xmlrpc-server-3.0.jar ../library/exalge/Exalge2.jar ../library/exalge/ExalgeUtil.jar ../library/ga/ga.jar"/>
	</target>

	<!-- create -->
	<target name="create" depends="init">

		<!-- create manifest file -->
		<manifest file="${manifest_filename}">
			<attribute name="Main-Class" value="${main_class}"/>
			<attribute name="Class-Path" value="${runtime_jar_filename}"/>
		</manifest>

		<!-- create jar file -->
		<jar jarfile="${jar_filename}"
			manifest="${manifest_filename}"
			basedir="../../../../../classes"
			includes="soars/application/visualshell/**, soars/common/**"
		/>

		<!-- remove manifest file -->
		<delete file="${manifest_filename}" />

		<!-- copy jar file -->
		<copy file="${jar_filename}"
		todir="../../../../../../Work/5.0/soars/bin/program"/>

	</target>

	<!-- clean -->
	<target name="clean" depends="init">
		<delete file="${jar_filename}" />
	</target>

</project>
