<?xml version="1.0" encoding="Shift_JIS"?>
<project name="test" default="create" basedir=".">

	<!--init property-->
	<target name="init" >
		<property name="jar_filename" value="../test.jar"/>
	</target>

	<!-- create -->
	<target name="create" depends="init">

		<!-- create jar file -->
		<jar jarfile="${jar_filename}"
    	basedir="../../../../../../classes"
			includes="soars/library/adapter/test/**, soars/common/**"
		/>

	</target>

	<!-- clean -->
	<target name="clean" depends="init">
		<delete file="${jar_filename}" />
	</target>

</project>
